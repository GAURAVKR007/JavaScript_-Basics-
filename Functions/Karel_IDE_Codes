 // To Print the Diagonal

 function main(){
   diagonals();
   diagonals();
   diagonals();
   diagonals();
   putBeeper();
}

function diagonals() {
   putBeeper();
   move();
   turnLeft();
   move();
   turnRight();
}

// To print the Pattern

